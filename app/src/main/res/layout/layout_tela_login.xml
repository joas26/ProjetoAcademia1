<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unitins.projetoacademia.TelaLogin">

    <TextView
        android:id="@+id/TelaLogintitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="61dp"
        android:layout_marginTop="122dp"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:textSize="36sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TelaLogincampoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TelaLogintitulo"
        android:layout_below="@+id/TelaLogintitulo"
        android:layout_marginTop="52dp"
        android:ems="13"
        android:hint="@string/login"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/TelaLogincampoSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TelaLogincampoLogin"
        android:layout_below="@+id/TelaLogincampoLogin"
        android:layout_marginTop="59dp"
        android:ems="13"
        android:hint="@string/senha"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/TelaLoginbotaoOk"
        style="@android:style/Widget.Holo.Light.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TelaLoginLembrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="18sp"
        android:onClick="validaLogin"
        android:text="@string/Entrar"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/TelaLoginEsqueciASenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/TelaLogincampoSenha"
        android:layout_below="@+id/TelaLogincampoSenha"
        android:layout_marginStart="12dp"
        android:layout_marginTop="19dp"
        android:text="Esqueci a senha" />

    <CheckBox
        android:id="@+id/TelaLoginLembrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TelaLoginEsqueciASenha"
        android:layout_alignBottom="@+id/TelaLoginEsqueciASenha"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/TelaLoginEsqueciASenha"
        android:text="Lembrar dados" />


</android.widget.RelativeLayout>
