<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.unitins.projetoacademia.TelaEsqueciSenha">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/TelaLogintitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="61dp"
            android:layout_marginTop="122dp"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/TelaEsqueciSenhaCampoEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:ems="14"
            android:inputType="textPersonName"
            android:hint="E-mail" />

        <TextView
            android:id="@+id/textViewEsqueciASenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/TelaEsqueciSenhaCampoEmail"
            android:layout_alignEnd="@+id/TelaEsqueciSenhaBotaoEnviar"
            android:layout_marginBottom="15dp"
            android:text="Esqueci minha senha" />

        <Button
            android:id="@+id/TelaEsqueciSenhaBotaoEnviar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/TelaLogintitulo"
            android:layout_alignTop="@+id/TelaEsqueciSenhaCampoEmail"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="73dp"
            android:onClick="validaEmail"
            android:text="Enviar" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
